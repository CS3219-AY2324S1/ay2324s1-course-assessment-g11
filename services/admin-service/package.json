{
  "name": "admin-service",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "lint": "eslint src/**/*.{ts,js} test/**/*.{ts,js} systemtest/**/*.{ts,js} swagger-doc-gen.ts",
    "dev:local": "dotenv -e ../../.env -c development yarn dev",
    "dev": "ts-node-dev src/app.ts",
    "build": "yarn swagger-autogen && tsc",
    "start": "node dist/src/app.js",
    "test": "dotenv -e ../../.env.firebase_emulators_test yarn test:ci",
    "test:ci": "firebase emulators:exec \"vitest run -c ./test/vitest.config.unit.ts\"",
    "systemtest": "dotenv -e ../../.env.firebase_emulators_test yarn systemtest:ci",
    "systemtest:ci": "firebase emulators:exec \"vitest run -c ./systemtest/vitest.config.system.ts\"",
    "swagger-autogen": "ts-node-dev swagger-doc-gen.ts"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "firebase-admin": "^11.10.1"
  },
  "devDependencies": {
    "supertest": "^6.3.3",
    "swagger-autogen": "^2.23.6",
    "ts-node-dev": "^2.0.0",
    "vitest": "^0.34.5"
  }
}
